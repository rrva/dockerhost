{
 "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> inst.text inst.sshd url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/postinstall selinux=0<enter>"
      ],
      "http_directory": "http",
      "disk_size": 65536,
      "guest_os_type": "ubuntu-64",
      "iso_checksum_type": "none",
      "iso_urls": [ "http://dl.fedoraproject.org/pub/fedora/linux/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso" ],
      "boot_wait": "10s",
      "ssh_wait_timeout": "10000s",
      "ssh_username": "root",
      "ssh_password": "",
      "shutdown_command": "poweroff",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2"
      }
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> inst.text inst.sshd url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/postinstall selinux=0<enter>"
      ],
      "http_directory": "http",
      "disk_size": 65536,
      "guest_os_type": "Ubuntu_64",
      "iso_checksum_type": "none",
      "iso_urls": [ "http://dl.fedoraproject.org/pub/fedora/linux/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso" ],
      "boot_wait": "10s",
      "ssh_wait_timeout": "10000s",
      "ssh_username": "root",
      "ssh_password": "",
      "shutdown_command": "poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ]
    }
  ],
  "provisioners": [
     {
      "type": "shell",
      "script": "install-ubuntu.sh"
     }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile.template"
    },
    {
      "type": "atlas",
      "only": ["vmware-iso"],
      "artifact": "rrva/dockerhost",
      "artifact_type": "vagrant.box",
      "metadata": {
          "provider": "vmware_desktop",
          "version": "0.0.4"
      }
    },
    {
      "type": "atlas",
      "only": ["virtualbox-iso"],
      "artifact": "rrva/dockerhost",
      "artifact_type": "vagrant.box",
      "metadata": {
          "provider": "virtualbox",
          "version": "0.0.4"
      }
    }
  ]
}
